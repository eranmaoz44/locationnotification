<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:orientation="vertical">    <ListView        android:id="@+id/lv_share_friends"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal" />    <ProgressBar        android:id="@+id/pb_share_wait"        style="?android:attr/progressBarStyleLarge"        android:layout_width="fill_parent"        android:layout_height="fill_parent"        android:layout_gravity="center"        android:indeterminate="true" /></RelativeLayout>